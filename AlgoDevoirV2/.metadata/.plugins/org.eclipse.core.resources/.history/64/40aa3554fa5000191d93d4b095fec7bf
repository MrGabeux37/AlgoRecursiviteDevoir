import java.io.*;
import java.math.BigInteger;

public class Algorithme1 {
	
	public static void main(String[] args) throws IOException {
		
		
		int max=100;
		int debut = 5;
		long TempsDebut=0;
		long temps1=0;
		BigInteger resultat = new BigInteger("0");
		
		while(debut<=max) {
			File Algo1 = new File("TempsAlgorithme1.txt");
			FileWriter FWAlgoecrit1 = new FileWriter(Algo1,true);
			BufferedWriter Algoecrit1 = new BufferedWriter(FWAlgoecrit1);
			TempsDebut = System.nanoTime();
		    resultat = CalcNbImpairRecursif(debut);
			temps1=System.nanoTime()-TempsDebut;
			Algoecrit1.write("façon 1: "+ debut + "e nombre impair: " + resultat +" Time: " + temps1/1000000 + " ms \n");
      		System.out.println("façon 1: "+ debut + "e nombre impair: " + resultat +" Time: " + temps1/1000000 + " ms");
      		debut+=5;
      		Algoecrit1.close();
		}
		
	}
	
	/** Calcul ternaire. 
	 * Un calcul récursif qui va trouver chacunes de 3 réponses précédentes afin de calculer le nombre en question.
	 * 
	 * @param k est la position du chiffre impair à calculer.
	 * @return La valeur à la position k.
	 */
	
	public static BigInteger CalcNbImpairRecursif(int k) {
		
		if(k<4) return new BigInteger("1");
		else return CalcNbImpairRecursif(k-1).add(CalcNbImpairRecursif(k-2)).add(CalcNbImpairRecursif(k-3));
		
	}
	

}
